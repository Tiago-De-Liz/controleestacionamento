@model ControleEstacionamento.Application.DTOs.PaginatedList<ControleEstacionamento.Application.DTOs.VeiculoResponseDto>
@{
    ViewData["Title"] = "Histórico";
    var placa = ViewBag.Placa as string ?? "";
    var dataInicio = ViewBag.DataInicio as string ?? "";
    var dataFim = ViewBag.DataFim as string ?? "";
    var tamanhoPagina = ViewBag.TamanhoPagina as int? ?? 10;
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Histórico de Veículos</h1>
    <p class="text-gray-600 mt-1">Todos os registros de entrada e saída</p>
</div>

<!-- Filtros -->
<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <form id="filtroHistoricoForm" asp-action="Historico" method="get" class="flex flex-wrap items-end gap-4">
        <div class="flex-1 min-w-[200px]">
            <label for="placa" class="form-label">Pesquisar por Placa</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <input type="text"
                       id="placa"
                       name="placa"
                       value="@placa"
                       placeholder="Digite a placa..."
                       class="form-input uppercase"
                       style="padding-left: 2.5rem;"
                       maxlength="7" />
            </div>
        </div>

        <div class="w-40">
            <label for="dataInicio" class="form-label">Data Início</label>
            <input type="date"
                   id="dataInicio"
                   name="dataInicio"
                   value="@dataInicio"
                   class="form-input" />
        </div>

        <div class="w-40">
            <label for="dataFim" class="form-label">Data Fim</label>
            <input type="date"
                   id="dataFim"
                   name="dataFim"
                   value="@dataFim"
                   class="form-input" />
        </div>

        <div class="w-24">
            <label for="tamanhoPagina" class="form-label">Por página</label>
            <select id="tamanhoPagina" name="tamanhoPagina" class="form-input" onchange="this.form.submit()">
                <option value="10" selected="@(tamanhoPagina == 10)">10</option>
                <option value="25" selected="@(tamanhoPagina == 25)">25</option>
                <option value="50" selected="@(tamanhoPagina == 50)">50</option>
                <option value="100" selected="@(tamanhoPagina == 100)">100</option>
            </select>
        </div>

        <div class="flex space-x-2">
            <button type="submit" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Filtrar
            </button>
            <button type="button" onclick="limparFiltros()" class="btn btn-secondary">
                Limpar
            </button>
        </div>

        <div class="ml-auto">
            <button type="button" onclick="exportarCSV()" class="btn btn-success">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Exportar CSV
            </button>
        </div>
    </form>
</div>

<!-- Resumo dos resultados -->
@if (!string.IsNullOrEmpty(placa) || !string.IsNullOrEmpty(dataInicio) || !string.IsNullOrEmpty(dataFim))
{
    <div class="mb-4 flex items-center space-x-2 text-sm text-gray-600">
        <span>Filtros ativos:</span>
        @if (!string.IsNullOrEmpty(placa))
        {
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                Placa: @placa
            </span>
        }
        @if (!string.IsNullOrEmpty(dataInicio))
        {
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                De: @dataInicio
            </span>
        }
        @if (!string.IsNullOrEmpty(dataFim))
        {
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                Até: @dataFim
            </span>
        }
    </div>
}

<!-- Totalizador -->
@{
    var finalizados = Model.Items.Where(v => v.DataHoraSaida.HasValue).ToList();
    var totalReceita = finalizados.Sum(v => v.ValorCobrado ?? 0);
}
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-blue-50 rounded-lg p-4">
        <div class="text-sm text-blue-600 font-medium">Total de Registros</div>
        <div class="text-2xl font-bold text-blue-800">@Model.TotalCount</div>
    </div>
    <div class="bg-indigo-50 rounded-lg p-4">
        <div class="text-sm text-indigo-600 font-medium">Nesta Página</div>
        <div class="text-2xl font-bold text-indigo-800">@Model.Items.Count</div>
    </div>
    <div class="bg-green-50 rounded-lg p-4">
        <div class="text-sm text-green-600 font-medium">Finalizados (página)</div>
        <div class="text-2xl font-bold text-green-800">@finalizados.Count</div>
    </div>
    <div class="bg-yellow-50 rounded-lg p-4">
        <div class="text-sm text-yellow-600 font-medium">Receita (página)</div>
        <div class="text-2xl font-bold text-yellow-800">R$ @totalReceita.ToString("F2")</div>
    </div>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    @if (Model.Items.Any())
    {
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Placa</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entrada</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Saída</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tempo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Valor</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var veiculo in Model.Items)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="font-mono font-bold text-gray-900">@veiculo.Placa</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @veiculo.DataHoraEntrada.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @(veiculo.DataHoraSaida.HasValue ? veiculo.DataHoraSaida.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @veiculo.TempoEstadia
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (veiculo.DataHoraSaida.HasValue)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Finalizado
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    Estacionado
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            @if (veiculo.ValorCobrado.HasValue)
                            {
                                <span class="text-green-600 font-bold">R$ @veiculo.ValorCobrado.Value.ToString("F2")</span>
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Paginação -->
        @if (Model.TotalPages > 1)
        {
            <div class="bg-gray-50 px-6 py-4 flex items-center justify-between border-t border-gray-200">
                <div class="text-sm text-gray-700">
                    Mostrando <span class="font-medium">@(((Model.PageIndex - 1) * Model.PageSize) + 1)</span>
                    a <span class="font-medium">@(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount))</span>
                    de <span class="font-medium">@Model.TotalCount</span> registros
                </div>
                <nav class="flex items-center space-x-1">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="@Url.Action("Historico", new { placa = placa, dataInicio = dataInicio, dataFim = dataFim, pagina = 1, tamanhoPagina = tamanhoPagina })"
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Primeira
                        </a>
                        <a href="@Url.Action("Historico", new { placa = placa, dataInicio = dataInicio, dataFim = dataFim, pagina = Model.PageIndex - 1, tamanhoPagina = tamanhoPagina })"
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </a>
                    }

                    @{
                        var startPage = Math.Max(1, Model.PageIndex - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                    }

                    @for (var i = startPage; i <= endPage; i++)
                    {
                        if (i == Model.PageIndex)
                        {
                            <span class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">
                                @i
                            </span>
                        }
                        else
                        {
                            <a href="@Url.Action("Historico", new { placa = placa, dataInicio = dataInicio, dataFim = dataFim, pagina = i, tamanhoPagina = tamanhoPagina })"
                               class="px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                @i
                            </a>
                        }
                    }

                    @if (Model.HasNextPage)
                    {
                        <a href="@Url.Action("Historico", new { placa = placa, dataInicio = dataInicio, dataFim = dataFim, pagina = Model.PageIndex + 1, tamanhoPagina = tamanhoPagina })"
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                        <a href="@Url.Action("Historico", new { placa = placa, dataInicio = dataInicio, dataFim = dataFim, pagina = Model.TotalPages, tamanhoPagina = tamanhoPagina })"
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Última
                        </a>
                    }
                </nav>
            </div>
        }
    }
    else
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum registro encontrado</h3>
            <p class="mt-1 text-sm text-gray-500">
                @if (!string.IsNullOrEmpty(placa) || !string.IsNullOrEmpty(dataInicio) || !string.IsNullOrEmpty(dataFim))
                {
                    <span>Tente ajustar os filtros de pesquisa.</span>
                }
                else
                {
                    <span>O histórico aparecerá aqui quando houver movimentações.</span>
                }
            </p>
        </div>
    }
</div>
