@model IEnumerable<ControleEstacionamento.Application.DTOs.VeiculoResponseDto>
@{
    ViewData["Title"] = "Relatórios";
    var dataInicio = ViewBag.DataInicio as string ?? "";
    var dataFim = ViewBag.DataFim as string ?? "";
    var totalEntradas = (int)ViewBag.TotalEntradas;
    var totalSaidas = (int)ViewBag.TotalSaidas;
    var receitaTotal = (decimal)ViewBag.ReceitaTotal;
    var ticketMedio = (decimal)ViewBag.TicketMedio;
    var tempoMedio = (TimeSpan)ViewBag.TempoMedio;
    var topPlacas = ViewBag.TopPlacas as IEnumerable<dynamic>;
    var ocupacaoLabels = ViewBag.OcupacaoLabels as List<string>;
    var ocupacaoValores = ViewBag.OcupacaoValores as List<int>;
    var receitaLabels = ViewBag.ReceitaLabels as List<string>;
    var receitaValores = ViewBag.ReceitaValores as List<decimal>;
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard e Relatórios</h1>
    <p class="text-gray-600 mt-1">Análise financeira e estatísticas do estacionamento</p>
</div>

<!-- Filtros de Período -->
<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <form asp-action="Index" method="get" class="flex flex-wrap items-end gap-4">
        <div class="w-40">
            <label for="dataInicio" class="form-label">Data Início</label>
            <input type="date"
                   id="dataInicio"
                   name="dataInicio"
                   value="@dataInicio"
                   class="form-input" />
        </div>

        <div class="w-40">
            <label for="dataFim" class="form-label">Data Fim</label>
            <input type="date"
                   id="dataFim"
                   name="dataFim"
                   value="@dataFim"
                   class="form-input" />
        </div>

        <div class="flex space-x-2">
            <button type="submit" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Gerar Relatório
            </button>
            <a href="@Url.Action("ExportarPDF", new { dataInicio = dataInicio, dataFim = dataFim })" class="btn btn-danger">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                Exportar PDF
            </a>
        </div>

        <!-- Atalhos de período -->
        <div class="flex space-x-2 ml-auto">
            <button type="button" onclick="setPeriodo(7)" class="px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-md">7 dias</button>
            <button type="button" onclick="setPeriodo(15)" class="px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-md">15 dias</button>
            <button type="button" onclick="setPeriodo(30)" class="px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-md">30 dias</button>
            <button type="button" onclick="setPeriodo(90)" class="px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-md">90 dias</button>
        </div>
    </form>
</div>

<!-- Cards de Estatísticas -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Total Entradas</p>
                <p class="text-2xl font-bold text-gray-900">@totalEntradas</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-green-100 rounded-lg">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Total Saídas</p>
                <p class="text-2xl font-bold text-gray-900">@totalSaidas</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-yellow-100 rounded-lg">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Receita Total</p>
                <p class="text-2xl font-bold text-green-600">R$ @receitaTotal.ToString("F2")</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-purple-100 rounded-lg">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Ticket Médio</p>
                <p class="text-2xl font-bold text-purple-600">R$ @ticketMedio.ToString("F2")</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-orange-100 rounded-lg">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Tempo Médio</p>
                <p class="text-2xl font-bold text-orange-600">@($"{(int)tempoMedio.TotalHours}h {tempoMedio.Minutes}m")</p>
            </div>
        </div>
    </div>
</div>

<!-- Gráficos -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Gráfico de Ocupação -->
    <div class="bg-white rounded-lg shadow-md p-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Entradas por Dia</h3>
        <div class="relative h-64">
            <canvas id="ocupacaoChart"></canvas>
        </div>
    </div>

    <!-- Gráfico de Receita -->
    <div class="bg-white rounded-lg shadow-md p-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Receita por Dia</h3>
        <div class="relative h-64">
            <canvas id="receitaChart"></canvas>
        </div>
    </div>
</div>

<!-- Top 5 Placas Frequentes -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Top 5 - Placas Mais Frequentes</h3>
    </div>
    @if (topPlacas != null && topPlacas.Any())
    {
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posição</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Placa</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Visitas</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total Gasto</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @{
                    var posicao = 1;
                }
                @foreach (var item in topPlacas)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (posicao == 1)
                            {
                                <span class="inline-flex items-center justify-center w-8 h-8 bg-yellow-400 text-white rounded-full font-bold">1</span>
                            }
                            else if (posicao == 2)
                            {
                                <span class="inline-flex items-center justify-center w-8 h-8 bg-gray-400 text-white rounded-full font-bold">2</span>
                            }
                            else if (posicao == 3)
                            {
                                <span class="inline-flex items-center justify-center w-8 h-8 bg-amber-600 text-white rounded-full font-bold">3</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center justify-center w-8 h-8 bg-gray-200 text-gray-700 rounded-full font-bold">@posicao</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="font-mono font-bold text-gray-900">@item.Placa</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                @item.Visitas visita(s)
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right">
                            <span class="text-green-600 font-bold">R$ @(((decimal)item.Total).ToString("F2"))</span>
                        </td>
                    </tr>
                    posicao++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-8">
            <p class="text-gray-500">Nenhum dado disponível para o período selecionado.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Dados dos gráficos
        const ocupacaoLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ocupacaoLabels));
        const ocupacaoValores = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ocupacaoValores));
        const receitaLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(receitaLabels));
        const receitaValores = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(receitaValores));

        // Gráfico de Ocupação
        const ocupacaoCtx = document.getElementById('ocupacaoChart').getContext('2d');
        new Chart(ocupacaoCtx, {
            type: 'bar',
            data: {
                labels: ocupacaoLabels,
                datasets: [{
                    label: 'Entradas',
                    data: ocupacaoValores,
                    backgroundColor: 'rgba(59, 130, 246, 0.5)',
                    borderColor: 'rgb(59, 130, 246)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Gráfico de Receita
        const receitaCtx = document.getElementById('receitaChart').getContext('2d');
        new Chart(receitaCtx, {
            type: 'line',
            data: {
                labels: receitaLabels,
                datasets: [{
                    label: 'Receita (R$)',
                    data: receitaValores,
                    backgroundColor: 'rgba(34, 197, 94, 0.2)',
                    borderColor: 'rgb(34, 197, 94)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'R$ ' + value.toFixed(2);
                            }
                        }
                    }
                }
            }
        });

        // Função para definir período rapidamente
        function setPeriodo(dias) {
            const hoje = new Date();
            const inicio = new Date();
            inicio.setDate(hoje.getDate() - dias);

            document.getElementById('dataInicio').value = inicio.toISOString().split('T')[0];
            document.getElementById('dataFim').value = hoje.toISOString().split('T')[0];

            // Submete o formulário automaticamente
            document.querySelector('form').submit();
        }
    </script>
}
