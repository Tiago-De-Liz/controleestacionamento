@model IEnumerable<ControleEstacionamento.Application.DTOs.TabelaPrecoDto>
@{
    ViewData["Title"] = "Tabelas de Preço";
}

<div class="flex justify-between items-center mb-6">
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Tabelas de Preço</h1>
        <p class="text-gray-600 mt-1">Gerencie as tabelas de preço do estacionamento</p>
    </div>
    <a asp-action="Criar" class="btn btn-primary">
        + Nova Tabela
    </a>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    @if (Model.Any())
    {
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vigência</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hora Inicial</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hora Adicional</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var tabela in Model)
                {
                    var hoje = DateTime.Today;
                    var vigente = tabela.DataInicioVigencia <= hoje && tabela.DataFimVigencia >= hoje;

                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <span class="text-gray-900">@tabela.DataInicioVigencia.ToString("dd/MM/yyyy")</span>
                            <span class="text-gray-400 mx-1">até</span>
                            <span class="text-gray-900">@tabela.DataFimVigencia.ToString("dd/MM/yyyy")</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-lg font-bold text-green-600">R$ @tabela.ValorHoraInicial.ToString("F2")</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-lg font-bold text-blue-600">R$ @tabela.ValorHoraAdicional.ToString("F2")</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (vigente)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Vigente
                                </span>
                            }
                            else if (tabela.DataInicioVigencia > hoje)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    Futura
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    Expirada
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a asp-action="Editar" asp-route-id="@tabela.Id" class="btn btn-secondary text-sm">
                                Editar
                            </a>
                            <form asp-action="Excluir" method="post" class="inline">
                                <input type="hidden" name="id" value="@tabela.Id" />
                                <button type="submit" class="btn btn-danger text-sm" onclick="return confirm('Deseja realmente excluir esta tabela de preços?')">
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma tabela de preço cadastrada</h3>
            <p class="mt-1 text-sm text-gray-500">Cadastre uma tabela de preço para começar a registrar veículos.</p>
            <div class="mt-6">
                <a asp-action="Criar" class="btn btn-primary">
                    + Nova Tabela
                </a>
            </div>
        </div>
    }
</div>
